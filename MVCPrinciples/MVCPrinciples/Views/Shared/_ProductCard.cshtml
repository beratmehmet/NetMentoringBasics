@model Product

    <tr>
        <td align="right">@Model.ProductId</td>
        <td>@Model.ProductName</td>
        <td>@Model.QuantityPerUnit</td>
        <td>@Model.UnitPrice</td>
        <td>@Model.UnitsInStock</td>
        <td>@Model.UnitsOnOrder</td>
        <td>@Model.ReorderLevel</td>
        <td>@Model.Discontinued</td>
        <td>@Model.Category.CategoryName</td>
        <td>@Model.Supplier.CompanyName</td>
        <td>
        <a asp-action="Edit" asp-controller="Product" asp-route-id=@Model.ProductId class="btn btn-dark" role="button">Edit</a>
        </td>
    </tr>